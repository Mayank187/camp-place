<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="50dp"
    android:paddingBottom="50dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:background="#222B3D">
    <ImageView
        android:id="@+id/imgh"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_width="250dp"
        android:layout_height="180dp"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="centerInside"
        android:src="@drawable/handshake"
        android:visibility="visible" />

    <EditText
        android:id="@+id/unc"
        style="@style/edit_text"
        android:layout_below="@id/imgh"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:layout_marginHorizontal="20dp"
        android:hint="Email" />

    <EditText
        android:id="@+id/passc"
        style="@style/edit_text"
        android:layout_alignEnd="@+id/unc"
        android:layout_alignStart="@+id/unc"
        android:layout_below="@+id/unc"
        android:layout_marginBottom="16dp"
        android:hint="@string/password"
        android:inputType="textPassword"
        />
    <Button
        android:id="@+id/buttonc"
        style="@style/button_s"
        android:layout_below="@+id/passc"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:text="REGISTER!"
        android:textAllCaps="true"
        android:onClick="log" />

    <TextView android:id="@+id/link_signupc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonc"
        android:layout_marginBottom="24dp"
        android:text="ALREADY REGISTERED?lOGIN HERE!"
        android:gravity="center"
        android:layout_margin="35dp"
        android:onClick="log"
        style="@style/textview_style"
        android:textSize="16dip"/>


</RelativeLayout>